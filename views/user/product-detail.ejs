                                             <img  
                                                  src="/uploads/re-image/<%=product.productImage[i]%>" 
                                                  alt="Thumbnail <%=i+1%>" 
                                                  class="thumbnail" 
                                                  onclick="document.getElementById('mainImage').src = this.src">
