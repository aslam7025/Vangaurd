<script src="https://cdnjs.cloudflare.com/ajax/libs/elevatezoom/3.0.8/jquery.elevatezoom.min.js"></script>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Quantity controls
    document.querySelectorAll('[data-change]').forEach(button => {
        button.addEventListener('click', function(e) {
            e.preventDefault();
            const quantityElement = document.getElementById('quantity');
            const change = parseInt(this.dataset.change);
            let quantity = parseInt(quantityElement.textContent) + change;
            quantity = Math.max(1, quantity);
            quantityElement.textContent = quantity;
        });
    });

    // Size selector handler
    const sizeSelect = document.getElementById('size-select');
    if(sizeSelect) {
        sizeSelect.addEventListener('change', function() {
            document.getElementById('selectedSize').value = 
                this.options[this.selectedIndex].text.split(" - ")[0];
            updatePrice();
        });
    }

    // Initialize image zoom
    $('#mainImage').elevateZoom({
        zoomType: "lens",
        lensShape: "round",
        lensSize: 150,
        scrollZoom: true
    });

    // Thumbnail click handler
    document.querySelectorAll('.thumbnail').forEach(thumb => {
        thumb.addEventListener('click', function() {
            const newSrc = this.src;
            $('#mainImage')
                .attr('src', newSrc)
                .data('zoom-image', newSrc)
                .elevateZoom({ 
                    zoomType: "lens", 
                    lensShape: "round", 
                    lensSize: 150, 
                    scrollZoom: true 
                });
        });
    });
});

function updatePrice() {
    const sizeSelect = document.getElementById('size-select');
    const selectedOption = sizeSelect.options[sizeSelect.selectedIndex];
    
    document.getElementById("dynamic-price").textContent = 
        `₹${parseInt(selectedOption.dataset.saleprice).toLocaleString('en-IN')}`;
    document.getElementById("dynamic-regprice").textContent = 
        `₹${parseInt(selectedOption.dataset.regularprice).toLocaleString('en-IN')}`;
}
</script>