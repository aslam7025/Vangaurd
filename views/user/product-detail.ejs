<style> 

  /* Add shop page variables and base styles */
  :root {
    --primary-color: #3a86ff;
    --secondary-color: #ff006e;
    --accent-color: #8338ec;
    --light-bg: #f8f9fa;
    --dark-text: #212529;
    --card-shadow: 0 4px 12px rgba(0, 0, 0, 0.08);
    --hover-shadow: 0 8px 18px rgba(0, 0, 0, 0.15);
    --border-radius: 12px;
    --transition-speed: 0.3s;
  }

  /* Main container alignment */
  .product-detail-page {
    max-width: 1200px;
    margin: 2rem auto;
    padding: 2rem;
    background: white;
    border-radius: var(--border-radius);
    box-shadow: var(--card-shadow);
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }

  /* Image gallery styling */
  .detail-gallery {
    background: var(--light-bg);
    padding: 1.5rem;
    border-radius: var(--border-radius);
  }

  .main-image img {
    width: 100%;
    height: 500px;
    object-fit: contain;
    border-radius: var(--border-radius);
    background: white;
    padding: 1rem;
    box-shadow: var(--card-shadow);
  }

  .slider-nav-thumbnails {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 1rem;
    margin-top: 1.5rem;
  }

  .slider-nav-thumbnails img {
    border: 2px solid transparent;
    border-radius: 8px;
    cursor: pointer;
    transition: all var(--transition-speed);
    background: white;
    padding: 0.5rem;
    box-shadow: var(--card-shadow);
  }

  .slider-nav-thumbnails img:hover {
    border-color: var(--primary-color);
    transform: scale(1.05);
  }

  /* Product info styling */
  .title-detail {
    font-size: 2rem;
    color: var(--dark-text);
    margin-bottom: 1.5rem;
    font-weight: 600;
  }

  .product-price-cover {
    margin: 2rem 0;
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .text-brand {
    font-size: 1.75rem;
    color: var(--secondary-color);
    font-weight: 700;
  }

  .old-price {
    color: #888;
    text-decoration: line-through;
    font-size: 1.2rem;
  }

  /* Form elements styling */
  .size-selector select {
    width: 100%;
    padding: 0.8rem 1rem;
    border: 2px solid #e0e0e0;
    border-radius: var(--border-radius);
    font-size: 1rem;
    transition: all var(--transition-speed);
    background: white;
    box-shadow: var(--card-shadow);
  }

  .size-selector select:focus {
   
    outline: none;
    box-shadow: 0 0 0 3px rgba(58, 134, 255, 0.1);
  }

  /* Quantity controls */
  .detail-qty {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin: 2rem 0;
    
  }

  .detail-qty a {
    padding: 0.8rem 1.2rem;
    background: var(--light-bg);
    border-radius: var(--border-radius);
    color: var(--dark-text);
    transition: all var(--transition-speed);
    box-shadow: var(--card-shadow);
    height: 30px;
    width: 30px;
  }

  .detail-qty a:hover {
    background: #98780d ;
    color: white;
    transform: translateY(-2px);
    box-shadow: var(--hover-shadow);
  }

  /* Add to cart button */
  .button-add-to-cart {
    background:black;
    color: white;
    padding: 1rem;
    border-radius: var(--border-radius);
    font-weight: 600;
    transition: all var(--transition-speed);
    width: 100%;
    border: none;
    cursor: pointer;
    box-shadow: var(--card-shadow);
  }

  .button-add-to-cart:hover {
    background:  #98780d;
    transform: translateY(-2px);
    box-shadow: var(--hover-shadow);
  }

  /* Product meta info */
  .product-meta {
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 2px solid var(--light-bg);
    font-size: 0.9rem;
    color: #666;
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .product-detail-page {
      padding: 1.5rem;
      margin: 1rem;
    }

    .main-image img {
      height: 300px;
    }

    .slider-nav-thumbnails {
      grid-template-columns: repeat(3, 1fr);
    }

    .title-detail {
      font-size: 1.5rem;
    }

    .text-brand {
      font-size: 1.4rem;
    }
  }
  .detail-qty a {
    padding: 0.8rem 1.2rem;
    background: #000000;
    border-radius: 20px;
    color: white;
    transition: all var(--transition-speed);
    box-shadow: var(--card-shadow);
}
