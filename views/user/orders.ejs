            <div class="alert "></div>
        <% if (!orders || orders.length === 0) { %>
            <p>No orders found.</p>
        <% } else { %>
            <% orders.forEach(order => { %>

                
                <div class="checkout-section">
                    <div class="order-header">
                        <div>
                            <h3>Order #<%= order.orderId %></h3>
                            <p class="text-muted"><%= new Date(order.createdOn).toDateString() %></p>
                        </div>
                        
                        <div class="order-status">
                        <%= order.status%>
                        
                    </div>
                    
                    
                    </div>

                    <% order.orderedItems.forEach(item => { %>
                        <div class="order-item">
                            <img src="/uploads/re-image/<%= item.product.productImage[0] %>" alt="<%= item.product.productName %>">
                            <div class="order-details">
                                <h4><%= item.product.productName %></h4>
                                <p>Price: ₹<%= item.price %></p>
                                <p>Quantity: <%= item.quantity %></p>
                                <% if (item.size) { %><p>Size: <%= item.size %></p><% } %>
                                <% if (item.productStatus === 'Cancelled') { %><p>Status: <span class="product-status"><%= item.productStatus %></span></p><% } %> 
                            </div>
                    
                            <% if ((order.status === 'Pending' || order.status === 'Processing') && (item.productStatus === 'Confirmed' || item.productStatus === 'Processing' || item.productStatus === 'Pending')) { %>
                                <button type="button" class="btn-cancel" onclick="confirmCancel('<%= order.orderId %>', '<%= item._id %>')">
                                    Cancel Item
                                </button>
                            <% } %>
                    
                            <!-- Buttons placed under each product now -->
                            <form id="returnForm-<%= order.orderId %>-<%= item._id %>" action="/return-order/<%= order.orderId %>" method="post">
                                <input type="hidden" name="itemId" value="<%= item._id %>">
                                <input type="hidden" name="returnReason" id="returnReason-<%= order.orderId %>-<%= item._id %>">
                    
                                <div class="btn-group">
                                    <% if (order.status === 'Delivered'&& item.productStatus != 'Cancelled') { %>
                                        <button type="button" class="btn btn-danger" onclick="askReturnReason('<%= order.orderId %>', '<%= item._id %>')">
                                            <i class="fas fa-undo-alt"></i> Return Item
                                        </button>
                                    <% } %>
                                    <a class="btn" href="/order-details/<%= order._id %>">
                                        <i class="fas fa-info-circle"></i> View Details
                                    </a>
                                </div>
                            </form>
                        </div>
                    <% }); %>
                    




                
